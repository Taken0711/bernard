<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

<Appenders>
  <Console name="Console" target="SYSTEM_OUT">
    <PatternLayout pattern="%d [%-5p] (%-13logger{1}) %msg%n"/>
  </Console>
</Appenders>

<Loggers>
  <!-- ... -->
  <Root level="all">
    <AppenderRef ref="Console"/>
  </Root>
  <!-- ... -->
</Loggers>  

</Configuration>